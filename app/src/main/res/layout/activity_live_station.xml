<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".livestatus.LiveStationActivity">


        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/rv_toolbar"
            style="@style/MyThemeOverlay_Toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/live_station"
            app:titleCentered="true">


        </com.google.android.material.appbar.MaterialToolbar>

        <LinearLayout
            android:id="@+id/card"
            android:layout_width="0dp"
            android:layout_height="380dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="16dp"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/back_shadow"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_toolbar"
            app:layout_goneMarginRight="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_fast_train" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        app:endIconDrawable="@drawable/ic_cancel"
                        app:endIconMode="clear_text"
                        app:endIconTint="#F86E6E"
                        app:hintTextColor="#656CEE">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etfrom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:fontFamily="@font/poppins_medium"
                            android:hint="From"
                            android:singleLine="true"
                            android:textStyle="bold" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_fast_train" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        app:endIconDrawable="@drawable/ic_cancel"
                        app:endIconMode="clear_text"
                        app:endIconTint="#F86E6E"
                        app:hintTextColor="#656CEE">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:fontFamily="@font/poppins_medium"
                            android:hint="FromStation (optional)"
                            android:singleLine="true"
                            android:textStyle="bold" />

                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_15"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <RadioButton
                            android:id="@+id/rb_two"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:buttonTint="#22242B"
                            android:checked="true"
                            android:onClick="onRadioButtonClicked"
                            android:text="2 Hours"
                            android:textSize="@dimen/sp_16" />

                        <RadioButton
                            android:id="@+id/rb_three"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:buttonTint="#22242B"
                            android:checked="false"
                            android:onClick="onRadioButtonClicked"
                            android:text="3 Hours"
                            android:textSize="@dimen/sp_16" />

                        <RadioButton
                            android:id="@+id/rb_four"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:buttonTint="#22242B"
                            android:checked="false"
                            android:onClick="onRadioButtonClicked"
                            android:text="4 Hours"
                            android:textSize="@dimen/sp_16" />


                    </RadioGroup>

                </LinearLayout>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btngetdetails"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@drawable/button_bg"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/get_details"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_20" />

            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>