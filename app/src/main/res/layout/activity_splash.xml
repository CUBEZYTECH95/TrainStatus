<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/st"
        tools:context=".livestatus.SplashActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/main_iv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.80" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.50"
                    android:orientation="vertical"
                    android:scaleType="centerCrop">


                    <ImageView
                        android:id="@+id/wc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_welcome" />


                    <ImageView
                        android:id="@+id/iv_check"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:src="@drawable/ic_check_your_train" />


                    <RelativeLayout
                        android:id="@+id/rv_"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <LinearLayout
                            android:id="@+id/li_start"
                            style="@style/start_screen_linerlayout"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="@dimen/_30sdp"
                            tools:targetApi="lollipop">

                            <TextView
                                style="@style/start_screen_linerlayout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/btn_start"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center"
                                android:stateListAnimator="@animator/card_down_animation"
                                android:text="Sweep to Start"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_16sdp" />

                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>